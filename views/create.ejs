<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>


    <body>
        <!--            Server side Windowing        -->
        <!-- EJS templates are processed through ejs view engine on the server -->
        <!--    ejs_code ->> ejs-view-engine ->> html_code      -->
        <!-- ejs-view-engine replace all dynamic variables with their values and return html page back to the browser -->

        <%- include('./partials/nav.ejs') %>

            <div class="create-blog content">
                <form action="/blogs" method="POST">
                    <label for="title">Blog title:</label>
                    <input type="text" id="title" name="title" required>
                    <label for="snippet">Blog snippet:</label>
                    <input type="text" id="snippet" name="snippet" required>
                    <label for="body">Blog body:</label>
                    <textarea id="body" name="body" required></textarea>
                    <button>Submit</button>
                </form>
            </div>
            <%- include('./partials/footer.ejs') %>

    </body>

</html>